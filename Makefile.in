rome:  excelfiles/RefRomeCsv ${ROMETTLFILES}
	cat ${ROMETTLFILES} | @RAPPER@ -I "junk" -i turtle -o turtle - > rome.ttl

excelfiles/RefRomeCsv: download/RefRomeCsv.zip
	mkdir -p excelfiles/RefRomeCsv
	@UNZIP@ -o -d excelfiles/RefRomeCsv download/RefRomeCsv.zip
